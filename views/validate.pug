doctype html
html(lang="en")
	head
		title="validate"
	body
		H3 Thank you #{val.name}
		p Your Order
		table(border="2",style="padding: lin",cellpadding="2")
			tr
				td 
					b Book
				td 
					b Quantity
				td 
					b Unit Cost
				td
					b Total Cost
			tr
				td(align="left") #{order.name}
				td(align="left") #{order.quantity}
				td(align="left") #{order.cost}
				td(align="left") #{order.quantity} * #{order.cost}
		p Total cost is #{order.quantity} * #{order.cost}
		p
			br "Please Enter your Credit Card information: 
			"
		form(method="post",action="confirm")
			table(border="0")
				tr
					td Credit Card	
					td(width="92")
						select(name="Creditcard")
							option(MasterCard)
							option(Visa)
							option(Amex)
				tr
					td Card Number
					td(width="92")
						input(type="text",name="Cardnumber",size="16")
				tr
					td Express Delivery
					td(width="92")
						input(type="checkbox",name="expressdelivery")
			input(type="submit",name="Purchase",value="Purchase")
			br a(href="/landing") LOGOUT
			block content